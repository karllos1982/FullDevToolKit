                                                                                    <SelectList TItem="SelectBaseItem"
                                                                                            TValue="int"
                                                                                            Data="@view.listPermissionValue"
                                                                                            TextField="@((item)=>item.Text)"
                                                                                            ValueField="@((item)=>item.Value)"
                                                                                            @bind-SelectedValue="@view.result.DeleteStatus">
