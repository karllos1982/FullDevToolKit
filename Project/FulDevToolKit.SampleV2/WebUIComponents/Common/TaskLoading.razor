@inject NavigationManager NavigationManager
@implements IDialogContentComponent<TaskLoadingConfigs>

    
<FluentDialog Hidden="@_hidden">
    <FluentDialogHeader ShowDismiss="false">
        <FluentStack VerticalAlignment="VerticalAlignment.Center" 
            HorizontalAlignment="HorizontalAlignment.Center">            
            <FluentLabel Typo="Typography.PaneHeader">
                @Content.Title
            </FluentLabel>
        </FluentStack>
    </FluentDialogHeader>

    <FluentDialogBody>
        
        <FluentStack Orientation="Orientation.Vertical" VerticalAlignment="VerticalAlignment.Center" 
            HorizontalAlignment="HorizontalAlignment.Center">
           <FluentLabel Typo="Typography.Body">
                @Content.Description
            </FluentLabel>

              <div style="width: 300px; display: grid; grid-gap: 12px; grid-auto-flow: column;">
                <FluentProgress></FluentProgress>
             </div>

        </FluentStack>
          
    </FluentDialogBody>

</FluentDialog>

@code {
    private bool _hidden = true;

    [Parameter]
    public TaskLoadingConfigs Content { get; set; } = new TaskLoadingConfigs();

    [CascadingParameter]
    public FluentDialog Dialog { get; set; } = default!;

    private async Task SaveAsync()
    {
        await Dialog.CloseAsync(Content);
    }

    private async Task CancelAsync()
    {
        await Dialog.CancelAsync();
    }


    [Parameter]
    public string Title { get; set; }


    public async Task Begin()
    {
        _hidden = false;

    }


    public async Task End()
    {
        _hidden = true; 
    }



}
